	keywords = {carbon, ecophysiology, leaf, light, nutrient, phylogeny, root, stem, strategy, water},
	file = {Full Text PDF:/home/simone/Zotero/storage/UNP6MLXM/Reich - 2014 - The world-wide ‘fast–slow’ plant economics spectru.pdf:application/pdf;Snapshot:/home/simone/Zotero/storage/32I572SA/1365-2745.html:text/html},
