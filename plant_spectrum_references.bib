@article{cayuela_taxonstand_2012,
	title = {taxonstand: An r package for species names standardisation in vegetation databases},
	volume = {3},
	issn = {2041-210X},
	url = {https://besjournals.onlinelibrary.wiley.com/doi/abs/10.1111/j.2041-210X.2012.00232.x},
